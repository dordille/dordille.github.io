@import 'nib'

html
    font-size: 10px
    font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif
    -webkit-font-smoothing: antialiased

body
    background: #333333
    margin: 0px
    padding: 0px

a
    text-decoration: none
    color: black

.sections
    

.section
    
    a
        padding: 2px
        margin-left: 8px
        margin-right: 8px

        &:hover
            color: #EEEEEE
        &:hover:before
            position: fixed
            left: 0
            top: 0
            width: 100%
            height: 100%
            content: ' '
            z-index: -1
            

    .about
        width: 200px
        height: 200px
        background: #DDDDDD
    
    .tumblr
        background: #0074D9
        &:hover:before
            background: #0074D9

    .codecademy
        background: #39D1B4
        &:hover:before
            background: #39D1B4

    .pozaic
        background: #FF4136
        &:hover:before
            background: #FF4136
    
    .pizzatext
        background: #FF851B
        &:hover:before
            background: #FF851B

    .github
        background: #01FF70
        &:hover:before
            background: #01FF70

    .email
        background: #39CCCC
        &:hover:before
            background: #39CCCC



.avatar
    display: inline-block
    box-shadow: 0px 0px 1px 0px #888888;
    border-radius: 40px
    width: 80px
    height: 80px
    img
        width: 80px
        height: 80px
        border-radius: 40px


.title
    margin-top: 5px
    font-size: 48px
